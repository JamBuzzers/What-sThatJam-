<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivSearchProfPic"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        app:srcCompat="@drawable/instagram_user_filled_24" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivSearchProfPic"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivOnline"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignEnd="@+id/ivSearchProfPic"
        app:srcCompat="@drawable/onlinebutton"
        android:visibility="gone"/>
</LinearLayout>
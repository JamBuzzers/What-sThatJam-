<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivSearchProfPic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp" />

    <ImageView
        android:id="@+id/ivSearchProfPic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/instagram_user_filled_24"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/ivOnline"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignEnd="@+id/ivSearchProfPic"
        app:srcCompat="@drawable/onlinebutton"
        android:visibility="gone"/>
</RelativeLayout>
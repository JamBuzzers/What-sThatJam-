<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/secondaryTextColor"/>

    <ImageView
        android:id="@+id/ivSearchProfPic"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/instagram_user_filled_24" />

    <ImageView
        android:id="@+id/ivOnline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/ivSearchProfPic"
        android:layout_alignEnd="@+id/ivSearchProfPic"
        android:visibility="visible"
        app:srcCompat="@drawable/onlinebutton" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:textColor="@color/colorPrimary"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivYes"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9.6dp"
        android:visibility="gone"
        app:srcCompat="@color/colorPrimary" />
</RelativeLayout>